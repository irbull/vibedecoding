---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const publishedPosts = allPosts.filter((post: CollectionEntry<'posts'>) => post.data.status === 'published');

  // Get unique tags
  const tagSet = new Set<string>();
  for (const post of publishedPosts) {
    for (const tag of post.data.tags) {
      tagSet.add(tag);
    }
  }

  return Array.from(tagSet).map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: publishedPosts
        .filter((p: CollectionEntry<'posts'>) => p.data.tags.includes(tag))
        .sort((a: CollectionEntry<'posts'>, b: CollectionEntry<'posts'>) => b.data.date.valueOf() - a.data.date.valueOf()),
    },
  }));
}

interface Props {
  tag: string;
  posts: CollectionEntry<'posts'>[];
}

const { tag, posts } = Astro.props;
---

<BaseLayout title={`#${tag}`} description={`Posts tagged with #${tag}.`}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
    <header class="mb-12">
      <a
        href="/tags"
        class="inline-flex items-center gap-1 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors mb-4"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        All Tags
      </a>
      <h1 class="text-3xl sm:text-4xl font-bold text-[var(--color-text)]">#{tag}</h1>
      <p class="mt-4 text-lg text-[var(--color-text-muted)]">
        {posts.length} {posts.length === 1 ? 'post' : 'posts'}
      </p>
    </header>

    <div class="space-y-8">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          date={post.data.date}
          href={`/posts/${post.slug}`}
          tags={post.data.tags}
          series={post.data.series}
          part={post.data.part}
        />
      ))}
    </div>
  </div>
</BaseLayout>
