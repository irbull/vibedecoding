---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const allPosts = await getCollection('posts');
const publishedPosts = allPosts.filter((post: CollectionEntry<'posts'>) => post.data.status === 'published');

// Count posts per tag
const tagCounts = new Map<string, number>();
for (const post of publishedPosts) {
  for (const tag of post.data.tags) {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  }
}

// Sort tags by count (descending), then alphabetically
const tags = Array.from(tagCounts.entries())
  .sort((a, b) => {
    if (b[1] !== a[1]) return b[1] - a[1];
    return a[0].localeCompare(b[0]);
  });
---

<BaseLayout title="Tags" description="Browse posts by topic.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
    <header class="mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-[var(--color-text)]">Tags</h1>
      <p class="mt-4 text-lg text-[var(--color-text-muted)]">
        Browse posts by topic.
      </p>
    </header>

    {tags.length > 0 ? (
      <div class="flex flex-wrap gap-3">
        {tags.map(([tag, count]) => (
          <a
            href={`/tags/${tag}`}
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] hover:border-accent-500 hover:bg-accent-50 transition-colors"
          >
            <span class="text-[var(--color-text)]">#{tag}</span>
            <span class="text-sm text-[var(--color-text-muted)]">({count})</span>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-[var(--color-text-muted)]">No tags yet.</p>
    )}
  </div>
</BaseLayout>
