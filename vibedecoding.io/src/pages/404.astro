---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-24 text-center">
    <h1 class="text-6xl sm:text-8xl font-bold text-stream-600">404</h1>
    <p class="mt-4 text-xl text-[var(--color-text)]">Page not found</p>
    <p class="mt-2 text-[var(--color-text-muted)]">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-flex items-center gap-2 mt-8 px-6 py-3 bg-stream-600 hover:bg-stream-700 text-white font-medium rounded-lg transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Home
    </a>
  </div>
</BaseLayout>
