---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPublishedLinks, closeDb, type PublishedLink } from '../../lib/db';

// Fetch published links at build time (SSG)
let links: PublishedLink[] = [];
let fetchError: string | null = null;

try {
  links = await getPublishedLinks();
} catch (err) {
  console.error('Failed to fetch links:', err);
  fetchError = err instanceof Error ? err.message : 'Unknown error';
} finally {
  // Close connection after build-time fetch
  await closeDb();
}
---

<BaseLayout title="Stream" description="A stream of links, articles, and resources from the life stream.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
    <header class="mb-12">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl sm:text-4xl font-bold text-[var(--color-text)]">Stream</h1>
        <a
          href="/rss.xml"
          class="flex items-center gap-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors"
          title="RSS Feed"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
          </svg>
          RSS
        </a>
      </div>
      <p class="mt-4 text-lg text-[var(--color-text-muted)]">
        Links, articles, and resources flowing through the life stream.
      </p>
    </header>

    {fetchError ? (
      <div class="text-center py-16">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-[var(--color-text)]">Error Loading Stream</h2>
        <p class="mt-2 text-[var(--color-text-muted)] max-w-md mx-auto">
          Unable to load links. Please try again later.
        </p>
      </div>
    ) : links.length > 0 ? (
      <div class="space-y-6">
        {links.map((link) => (
          <article class="p-4 border border-[var(--color-border)] rounded-lg">
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg font-medium text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors"
            >
              {link.title || link.url}
            </a>
            {link.summary_short && (
              <p class="mt-2 text-[var(--color-text-muted)]">{link.summary_short}</p>
            )}
            <div class="mt-3 flex flex-wrap items-center gap-2">
              {link.tags.map((tag) => (
                <a
                  href={`/stream/tags/${tag}`}
                  class="text-xs px-2 py-1 rounded bg-neutral-100 text-[var(--color-text-muted)] hover:text-[var(--color-accent)]"
                >
                  #{tag}
                </a>
              ))}
              <span class="ml-auto text-xs text-[var(--color-text-muted)]">
                {(link.published_at || link.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </span>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-accent-100 mb-4">
          <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-[var(--color-text)]">No Links Yet</h2>
        <p class="mt-2 text-[var(--color-text-muted)] max-w-md mx-auto">
          The stream is empty. Links will appear here once they are published.
        </p>
        <a
          href="/posts/vibe-decoding"
          class="inline-flex items-center gap-2 mt-6 text-[var(--color-accent)] hover:underline"
        >
          Read about the life stream concept
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    )}
  </div>
</BaseLayout>
