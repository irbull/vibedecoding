---
interface Props {
  title: string;
  description: string;
  date: Date;
  href: string;
  tags?: string[];
  series?: string;
  part?: number;
}

const { title, description, date, href, tags = [], series, part } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group">
  <a href={href} class="block">
    <h3 class="text-lg font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">
      {title}
    </h3>

    <div class="mt-1 flex items-center gap-3 text-sm text-[var(--color-text-muted)]">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      {series && part !== undefined && (
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs bg-accent-100 text-accent-700">
          {series} Â· Part {part}
        </span>
      )}
    </div>

    <p class="mt-2 text-[var(--color-text-muted)] line-clamp-2">
      {description}
    </p>

    {tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.slice(0, 3).map((tag) => (
          <span class="text-xs text-[var(--color-text-muted)]">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </a>
</article>
