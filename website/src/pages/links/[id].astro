---
import BaseLayout from '../../layouts/BaseLayout.astro';
import linksData from '../../data/links.json';

export function getStaticPaths() {
  return linksData.links.map(link => ({
    params: { id: link.id },
    props: { link }
  }));
}

const { link } = Astro.props;

// Format the date
const formattedDate = new Date(link.dateShared).toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit'
});

// Get domain from URL
const domain = new URL(link.url).hostname.replace('www.', '');

// Find related links (same tags)
const relatedLinks = linksData.links
  .filter(l => l.id !== link.id && l.tags.some(t => link.tags.includes(t)))
  .slice(0, 3);
---

<BaseLayout title={link.title} description={link.summary}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Back link -->
    <a 
      href="/links" 
      class="inline-flex items-center gap-2 text-[--color-terminal-green] font-mono mb-8 hover:text-[--color-terminal-green-light] transition-colors group"
    >
      <span class="group-hover:-translate-x-1 transition-transform">â†</span>
      <span>cd ..</span>
    </a>

    <!-- Header -->
    <header class="mb-10">
      <div class="flex items-center gap-4 mb-4 text-sm font-mono">
        <span class="text-[--color-terminal-green] flex items-center gap-2">
          <span>ğŸ“¡</span>
          {domain}
        </span>
        <span class="text-[--color-text-dim]">â€¢</span>
        <span class="text-[--color-text-dim]">{formattedDate}</span>
      </div>
      
      <h1 class="text-3xl sm:text-4xl font-bold text-[--color-text] mb-6 leading-tight">
        {link.title}
      </h1>
      
      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-6">
        {link.tags.map((tag: string) => (
          <a 
            href={`/tags/${tag}`}
            class="px-3 py-1 text-sm font-mono bg-[--color-terminal-green]/10 text-[--color-terminal-green] border border-[--color-terminal-green]/30 hover:border-[--color-terminal-green] hover:bg-[--color-terminal-green]/20 transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    </header>

    <!-- Main content card -->
    <div class="bg-[--color-bg-card] border border-[--color-terminal-green]/30 p-8 mb-10">
      <!-- Summary -->
      <section class="mb-8">
        <h2 class="text-lg font-mono text-[--color-terminal-green] mb-3 flex items-center gap-2">
          <span>$</span> cat summary.txt
        </h2>
        <p class="text-[--color-text] text-lg leading-relaxed">
          {link.summary}
        </p>
      </section>

      <!-- Notes -->
      {link.notes && (
        <section class="mb-8 border-t border-[--color-terminal-green]/20 pt-8">
          <h2 class="text-lg font-mono text-[--color-terminal-green] mb-3 flex items-center gap-2">
            <span>$</span> cat notes.md
          </h2>
          <div class="bg-[--color-bg]/50 border-l-4 border-[--color-terminal-green] p-4">
            <p class="text-[--color-text-dim] italic leading-relaxed">
              "{link.notes}"
            </p>
          </div>
        </section>
      )}

      <!-- Visit link button -->
      <div class="border-t border-[--color-terminal-green]/20 pt-8">
        <a 
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 bg-[--color-terminal-green] text-[--color-bg] font-bold font-mono hover:bg-[--color-terminal-green-light] transition-all transform hover:scale-105 relative group"
        >
          <span class="relative z-10">Visit Link</span>
          <span class="text-xl">â†—</span>
          <div class="absolute inset-0 border-2 border-[--color-terminal-green] translate-x-1 translate-y-1 group-hover:translate-x-0 group-hover:translate-y-0 transition-transform"></div>
        </a>
        
        <p class="mt-4 text-sm text-[--color-text-dim] font-mono break-all">
          {link.url}
        </p>
      </div>
    </div>

    <!-- Related Links -->
    {relatedLinks.length > 0 && (
      <section>
        <h2 class="text-xl font-mono text-[--color-terminal-green] mb-6 flex items-center gap-2">
          <span>$</span> find . -related
        </h2>
        <div class="space-y-4">
          {relatedLinks.map((related) => (
            <a 
              href={`/links/${related.id}`}
              class="block bg-[--color-bg-card] border border-[--color-terminal-green]/30 p-4 hover:border-[--color-terminal-green] transition-colors group"
            >
              <h3 class="font-bold text-[--color-text] group-hover:text-[--color-terminal-green] transition-colors mb-2">
                {related.title}
              </h3>
              <div class="flex flex-wrap gap-2">
                {related.tags.slice(0, 3).map((tag: string) => (
                  <span class="text-xs font-mono text-[--color-text-dim]">#{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>
