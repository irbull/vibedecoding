# Vibe Decoding - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database (Supabase)
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Direct database connection (for migrations/scripts)
DATABASE_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres

# =============================================================================
# Kafka
# =============================================================================
# After running terraform in infrastructure/ec2-kafka, use the output broker address
KAFKA_BROKERS=your-kafka-broker:9093
KAFKA_CLIENT_ID=stream-agents
KAFKA_AUTH_METHOD=plain
KAFKA_SASL_USERNAME=your-username
KAFKA_SASL_PASSWORD=your-password
KAFKA_SSL=true

# Suppress KafkaJS partitioner warning
KAFKAJS_NO_PARTITIONER_WARNING=1

# =============================================================================
# OpenAI (for enricher agent)
# =============================================================================
OPENAI_API_KEY=sk-...

# =============================================================================
# Optional
# =============================================================================
# AWS profile for Terraform (if not using default)
# AWS_PROFILE=your-aws-profile
